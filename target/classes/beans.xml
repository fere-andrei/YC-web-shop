<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">


    <!-- Service -->
    <bean id="cartService" class="service.impl.CartServiceImpl">
        <property name="productsDao" ref="productsDAO"/>
        <property name="myCartDAO" ref="myCartDAO"/>
    </bean>

    <bean id="registerService" class="service.impl.RegisterServiceImpl">
        <property name="userDao" ref="userDAO"/>
    </bean>

    <bean id="loginService" class="service.impl.LoginServiceImpl">
        <property name="myCartDAO" ref="myCartDAO"/>
        <property name="userDAO" ref="userDAO"/>
    </bean>

    <bean id="orderService" class="service.impl.OrderServiceImpl">
        <property name="myCartDAO" ref="myCartDAO"/>
        <property name="orderDAO" ref="orderDAO"/>
        <property name="orderDetailsDAO" ref="orderDetailsDAO"/>
        <property name="productsDAO" ref="productsDAO"/>
    </bean>

    <bean id="productsService" class="service.impl.ProductsServiceImpl" lazy-init="false">
        <property name="productsDao" ref="productsDAO"/>
    </bean>

    <bean id="homeService" class="service.impl.HomeServiceImpl">
        <property name="productsDAO" ref="productsDAO"/>
        <property name="myCartDAO" ref="myCartDAO"/>
        <property name="userDAO" ref="userDAO"/>
    </bean>

    <bean id="logoutService" class="service.impl.LogoutServiceImpl">
    </bean>

    <!-- dao beans -->
    <bean id="productsDAO" class="dao.daoImpl.ProductsDAOImpl" lazy-init="false"/>
    <bean id="myCartDAO" class="dao.daoImpl.MyCartDAOImpl"/>
    <bean id="userDAO" class="dao.daoImpl.UserDAOImpl"/>
    <bean id="orderDAO" class="dao.daoImpl.OrderDAOImpl"/>
    <bean id="orderDetailsDAO" class="dao.daoImpl.OrderDetailsDAOImpl"/>

